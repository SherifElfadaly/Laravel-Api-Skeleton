FROM php:7.4-fpm

WORKDIR /var/www/html/

# development packages
RUN apt-get update && apt-get install -y \
    git \
    zip \
    curl \
    sudo \
    unzip \
    libicu-dev \
    libbz2-dev \
    libpng-dev \
    libjpeg-dev \
    libwebp-dev \
    libxpm-dev \
    libmcrypt-dev \
    libreadline-dev \
    libfreetype6-dev \
    libonig-dev \
    libzip-dev \
    g++ \
    cron \
    nano

# add php configurations
COPY app/php.ini /usr/local/etc/php/conf.d
COPY app/laravel.ini /usr/local/etc/php/conf.d
COPY app/opcache.ini /usr/local/etc/php/conf.d
COPY app/xlaravel.pool.conf /usr/local/etc/php-fpm.d

RUN docker-php-ext-install \
    bz2 \
    intl \
    iconv \
    bcmath \
    opcache \
    calendar \
    mbstring \
    pdo_mysql \
    zip \
    gd

RUN docker-php-ext-configure gd \
    --enable-gd \
    --with-freetype \
    --with-jpeg \
    --with-xpm \
    --with-webp

RUN cd /usr/src/php/ext/gd && make
RUN cp /usr/src/php/ext/gd/modules/gd.so /usr/local/lib/php/extensions/no-debug-non-zts-20190902/gd.so
RUN docker-php-ext-install -j$(nproc) gd

RUN docker-php-source extract && \
    pecl install redis && \
    docker-php-ext-enable redis && \
    docker-php-source delete

# composer
# RUN curl -sS https://getcomposer.org/installer | php && \
#     mv composer.phar /usr/local/bin/composer && \
#     composer global require hirak/prestissimo --no-plugins --no-scripts

RUN curl -sS https://getcomposer.org/installer | php && \
    mv composer.phar /usr/local/bin/composer

# configure cron
RUN touch /etc/cron.d/crons
RUN touch /var/log/cron.log
RUN chmod 0644 /etc/cron.d/crons

# register laravel scheduler
COPY app/crons /etc/cron.d/crons

# start server, clear cach, run migrations and restart queue
CMD php-fpm -D && \
    composer update nothing --prefer-dist --lock && \
    composer install --prefer-dist --optimize-autoloader && \
    sudo php artisan clear-compiled && \
    sudo php artisan view:clear && \
    sudo php artisan queue:restart && \
    sudo php artisan optimize && \
    sudo php artisan module:optimize && \
    sudo php artisan module:migrate --force && \
    sudo php artisan module:seed roles --force && \
    sudo php artisan module:seed --force && \
    sudo php artisan storage:link && \
    sudo php artisan module:passport:install && \
    sudo php artisan optimize && \
    sudo php artisan module:optimize && \
    sudo php artisan doc:generate && \
    sudo chown -R www-data:www-data /var/www/html && \ 
    sudo find /var/www/html -type f -exec chmod 664 {} \; && \ 
    sudo find /var/www/html -type d -exec chmod 775 {} \; && \
    sudo php artisan queue:work redis --sleep=3 --tries=3
